<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.caloriecounter.nicoleazachee.caloriecounter.MainActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3.5"
        android:gravity="center">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <com.kd.progressbar.SimpleCircularProgressbar
                xmlns:custom="http://schemas.android.com/apk/res-auto"
                android:id="@+id/calorie_progress_bar"
                custom:progressbar_thickness="10"
                custom:progress="40"
                custom:rotation="clockwise"
                custom:progressColor="@android:color/holo_blue_light"
                custom:backgroundColor="@android:color/darker_gray"
                custom:startAt="right"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:scaleType="fitXY"/>

            <TextView
                android:id="@+id/text_calorie_count_current_total"
                android:textAlignment="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="580"
                android:textColor="#21a0a3"
                android:textSize="40sp"
                android:layout_centerInParent="true"
                android:paddingBottom="50dp"/>
            <TextView
                android:id="@+id/text_calorie_static"
                android:textAlignment="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#668484"
                android:text="kcal"
                android:textSize="15sp"
                android:layout_centerInParent="true"/>
            <TextView
                android:id="@+id/text_calorie_count_max"
                android:textAlignment="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#7dbebf"
                android:text="/1800"
                android:textSize="20sp"
                android:layout_centerInParent="true"
                android:paddingTop="50dp"/>


        </RelativeLayout>

    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.5"
        android:gravity="center">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="5">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5"></LinearLayout>
                <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5">
                    <ImageView
                        android:id="@+id/button_subtract_calorie"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/minusbuttonblue"
                        android:scaleY=".45"
                        android:scaleX=".6"
                        android:onClick="subtractCalorie"/>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4">
                <EditText

                    android:inputType="number"
                    android:id="@+id/entry_add_calorie"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="#446464"

                    android:textColorHint="@android:color/darker_gray"
                    android:textSize="20sp"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5">
                    <ImageView
                        android:id="@+id/button_add_calorie"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/plussbuttonblue"
                        android:scaleY=".45"
                        android:scaleX=".6"
                        android:onClick="addCalorie"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5"></LinearLayout>
            </LinearLayout>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="5">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"></LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4">
                <EditText
                    android:id="@+id/entry_search_calorie"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="#446464"
                    android:hint="search"
                    android:textColorHint="@android:color/darker_gray"
                    android:textSize="20sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5">
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5"></LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="2">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3">
                <TextView
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="#446464"
                    android:text="Go"
                    android:textSize="20sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="7">

                <com.app.progresviews.ProgressLine
                    android:id="@+id/go_progress_line"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.9"
                    app:definition="kcal"
                    app:value="800"
                    app:lineBarWidth="7dp"
                    app:valuePercentage="60"
                    app:valueDefTextSize="20sp"
                    app:lineProgressColor="#43bd9f"
                    app:underLineColor="@android:color/darker_gray"
                    />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="2">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3">
                <TextView
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="#446464"
                    android:text="Grow"
                    android:textSize="20sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="7">
                <com.app.progresviews.ProgressLine
                    android:id="@+id/grow_progress_line"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.9"
                    app:definition="kcal"
                    app:value="400"
                    app:lineBarWidth="7dp"
                    app:valuePercentage="40"
                    app:valueDefTextSize="20sp"
                    app:lineProgressColor="#43bd9f"
                    app:underLineColor="@android:color/darker_gray"
                    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="2">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3">
                <TextView
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="#446464"
                    android:text="Glow"
                    android:textSize="20sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="7">
                <com.app.progresviews.ProgressLine
                    android:id="@+id/glow_progress_line"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.9"
                    app:definition="kcal"
                    app:value="600"
                    app:lineBarWidth="7dp"
                    app:valuePercentage="50"
                    app:valueDefTextSize="20sp"
                    app:lineProgressColor="#43bd9f"
                    app:underLineColor="@android:color/darker_gray"
                    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="2">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3">
                <TextView
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="#446464"
                    android:text="Other"
                    android:textSize="20sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="7">
                <com.app.progresviews.ProgressLine
                    android:id="@+id/other_progress_line"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.9"
                    app:definition="kcal"
                    app:value="100"
                    app:lineBarWidth="7dp"
                    app:valuePercentage="10"
                    app:valueDefTextSize="20sp"
                    app:lineProgressColor="#ffb300"
                    app:underLineColor="@android:color/darker_gray"
                    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_weight="2">
            <ProgressBar
                android:indeterminate="false"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/progressBar1"
                android:max="100"></ProgressBar>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>


</RelativeLayout>
